/* components/tabComponent.wxss */
.tabs{
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: "nowrap";
}
.tab{
    flex-grow: 1;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border-bottom: 4rpx solid #e8e8e8;
    background-color: #FFFFFF;
    color: #666666;
    box-sizing: border-box;
    position: relative;
}
.active_tab{
    border-bottom: 4rpx solid #025fcb;
}
.line{
    width: 100%;
    height: 4rpx;
    background-color: rgba(0,0,255,.4);
    border-radius: 6rpx;
    position: absolute;
    left: 0;
    bottom: 0;
    transition: left 1s linear;
}